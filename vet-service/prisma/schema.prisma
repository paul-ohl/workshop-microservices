generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-3.0.x", "linux-arm64-openssl-3.0.x", "linux-arm64-openssl-1.1.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Day {
  LUNDI
  MARDI
  MERCREDI
  JEUDI
  VENDREDI
  SAMEDI
  DIMANCHE
}

model TimeSlot {
  id              String        @id @default(uuid())
  startTime       DateTime
  endTime         DateTime
  disponibilityId String
  Disponibility   Disponibility @relation(fields: [disponibilityId], references: [id])
  isDisponible    Boolean
}

model Disponibility {
  id       String     @id @default(uuid())
  day      Day[]
  vetId    String
  vet      Vet        @relation(fields: [vetId], references: [id])
  timeSlot TimeSlot[]
}

model Vet {
  id            String          @id @default(uuid())
  name          String
  price         Int
  categoryIds   String[]
  disponibility Disponibility[]
}
