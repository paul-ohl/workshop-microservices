generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Kennel {
  id       String    @id @default(auto()) @map("_id") @db.ObjectId
  name     String
  address  String
  productsId String[]
  vets     String[]
  animals  String[]
}

model Product {
  id       String  @id @default(auto()) @map("_id") @db.ObjectId
  name     String
  price    Float
  stock    Int
}
